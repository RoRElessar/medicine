<div class="container">

  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center"><strong><%= @company.name %></strong>
        </h2>
        <hr>
      </div>
      <div class="col-md-6">
        <%= image_tag @company.image, class: 'img-responsive img-border-left' if @company.image? %>
      </div>
      <div class="col-md-6">
        <p><%= @company.email %></p>
        <p><%= @company.address %></p>
        <p> <%= @company.phone %></p>
      </div>

      <div class="col-lg-12">
        <%= @company.description %>
      </div>
      <div class="clearfix"></div>
      <iframe  width=100% height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
               src = "https://maps.google.com/maps?q=<%= @company.lat %>,<%= @company.lng %>&hl=es;z=14&amp;output=embed"></iframe>
    </div>
  </div>



  <% current_company.doctors.each do |doctor| %>
      <div class="col-sm-12  doctor-list-item">
        <div class="container-fluid well span6">
          <div class="row-fluid">
            <div class="col-md-2">
              <%= image_tag(doctor.photo.url(:medium), class: 'img-circle') %>
            </div>

            <div class="col-md-3">
              <h3><%= doctor.surname %></h3>
              <h3><%= doctor.name %></h3>
              <h3><%= doctor.second_name %></h3>
            </div>
            <div class="col-md-5">
              <h4>Лікар <%= doctor.category %> категорії </h4>
              <h4>Спеціалізація  <%= doctor.specialization %> </h4>
              <h4>Email: <%= doctor.email %></h4>

            </div>
            <div class="col-md-2">
              <%= link_to 'Записатися до лікаря', doctor_path(doctor), class: 'btn btn-info btn-block' %>


            </div>
          </div>
        </div>
      </div>
  <% end %>




</div>
