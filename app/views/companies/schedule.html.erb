<div id="blue">
  <div class="container">
    <div class="row centered">
      <div class="col-lg-8 col-lg-offset-2">
        <h4>График компании</h4>

      </div>
    </div><!-- row -->
  </div><!-- container -->
</div><!--  bluewrap -->
<div class="container">
  <table class="table table-condensed">
    <thead>
    <tr>
      <th>Ім’я</th>
      <th>Пн</th>
      <th>Вн</th>
      <th>Ср</th>
      <th>Чт</th>
      <th>Пт</th>
      <th>Сб</th>
      <th>Нд</th>
    </tr>
    </thead>
    <tbody>
      <% @doctors.each do |doctor| %>
        <tr>
          <td><%= doctor.name %></td>
          <% Date::DAYNAMES.rotate(1).each do |weekday| %>
            <td>
              <% if is_weekend?(doctor.schedule, weekday) %>
                <%= 'Вихідний' %>
              <% else %>
                  <%= doctor.schedule.send(weekday.downcase+'_start_time').strftime("%H - %M :") %>
                  <%= doctor.schedule.send(weekday.downcase+'_finish_time').strftime("%H - %M") %>
                  <br>
                  <% (doctor.schedule.send(weekday.downcase+'_start_time').to_i..doctor.schedule.send(weekday.downcase+'_finish_time').to_i).step(doctor.schedule.interval.minutes).to_a[0...-1].each do |interval| %>
                    <%= link_to(Time.at(interval).utc.strftime("%H - %M"), records_path(user_id: current_user, doctor_id: doctor, time: Time.at(interval).utc), method: :post) %>
                    <br>
                  <% end %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>